rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /empresa/{empresaId}/teares/{tearId} {
      allow read, write: if request.auth != null;
    }
    match /empresa/{empresaId}/historico/{docId} {
      allow read, write: if request.auth != null;
    }
    match /empresa/{empresaId}/usuarios/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == uid ||
        get(/databases/$(database)/documents/empresa/$(empresaId)/usuarios/$(request.auth.uid)).data.role == 'admin'
      );
    }
  }
}
